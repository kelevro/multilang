$(".translation-<%= @translation.id %>")
        .find('.status-column')
        .html("<%= j status_tag(@translation.is_completed?, 'Completed', 'Incompleted') %>");

$(".translation-<%= @translation.id %>")
        .find('.status-action')
        .html("<%= j status_control(@translation) %>");

$(".translation-<%= @translation.id %>")
    .find('.edit-block')
    .data('value', "<%= j(@translation.value) %>");

$(".translation-<%= @translation.id %>").find('.exchange').addClass('hide');
$(".translation-<%= @translation.id %>").find('.check').removeClass('hide');
